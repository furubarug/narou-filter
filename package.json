{
  "name": "narou-filter",
  "version": "1.1.0",
  "description": "Firefox addon for narou",
  "scripts": {
    "build": "cpx src/**/*.{html,png} dist && cpx manifest.json dist && cpx node_modules/milligram/dist/milligram.min.css dist/options && parcel build src/**/*.ts --no-source-maps",
    "clean": "rimraf dist",
    "zip": "web-ext build",
    "start": "web-ext run",
    "lint": "eslint --fix src/**/*.ts"
  },
  "author": "furubarug",
  "license": "MIT",
  "devDependencies": {
    "@parcel/transformer-js": "^2.0.0-beta.3.1",
    "@parcel/transformer-sass": "^2.0.0-beta.3.1",
    "@parcel/transformer-vue": "^2.0.0-beta.3.1",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "cpx": "^1.5.0",
    "eslint": "^7.28.0",
    "eslint-config-google": "^0.14.0",
    "milligram": "^1.4.1",
    "parcel": "^2.0.0-beta.3.1",
    "typescript": "^4.3.2",
    "vue": "^3.1.2",
    "web-ext": "^6.1.0",
    "web-ext-types": "^3.2.1"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "google"
    ],
    "env": {
      "browser": true,
      "node": true,
      "webextensions": true
    },
    "rules": {
      "require-jsdoc": "off",
      "max-len": [
        "error",
        {
          "code": 120
        }
      ]
    }
  },
  "webExt": {
    "sourceDir": "dist/"
  }
}
